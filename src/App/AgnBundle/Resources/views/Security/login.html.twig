{% extends "X4DSBAdmin2Bundle:Login:login.html.twig" %}

{% block title %}Login{% endblock %}

{% block header %}
    Please Sign In
{% endblock %}
    
{% block fos_user_content %}

<form role="form" action="{{ path("_auth_login_check") }}" method="post">
    <fieldset>
        <div class="form-group">
            <input type="text" id="username" class="form-control" placeholder="Username" name="_username" value="{{ last_username }}"  required="required" autofocus>
        </div>
        <div class="form-group">
            <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required="required">
        </div>
        {% if error %}
            <div class="alert-danger">{{ error.message|trans }}</div>
        {% endif %}
        <div class="checkbox">
            <label>
                <input type="checkbox" id="remember_me" name="_remember_me" value="on">Remember Me
            </label>
        </div>
        <input type="submit" id="_submit" class="btn btn-lg btn-success btn-block" name="_submit" value="Login" />
    </fieldset>
</form>

{% endblock fos_user_content %}    
